{
  "title":"Topics in specific date range",
  "type":"map",
  "desc":"Get topics bursting in specific date range",
  "mapping": {
    "collection": {
      "type":"str",
      "desc":"Specify a collection name",
      "required":true
    },

    "header": {
      "type":"map",
      "mapping": $(header)
    },

    "date_range": {
      "type": "map",
      "desc": "specify the date range",
      "required": true,
      "mapping": {
        "start": {
          "type":"str",
          "desc":"start date."
        },

         "end": {
          "type":"str",
          "desc":"end date."
        }

      }
    }
  }
}
