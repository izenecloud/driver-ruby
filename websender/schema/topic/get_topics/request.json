{
  "title":"Get Topics From Input Text",
  "type":"map",
  "desc":"Get topics from specified target topic",
  "mapping": {
    "collection": {
      "type":"str",
      "desc":"Specify a collection name",
      "required":true
    },

    "header": {
      "type":"map",
      "mapping": $(header)
    },

    "content": {
      "type":"str",
      "desc":"Specify contenti to be detected",
      "required":true
    },

    "limit": {
      "type":"int",
      "desc":"Specify topic limit returned."
    }
  }
}
