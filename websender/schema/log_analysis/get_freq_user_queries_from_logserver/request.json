{
  "title":"User Queries from log server",
  "type":"map",
  "desc":"Get user queries from log server.",
  "mapping": {
    "collection": {
    "type":"str",
    "desc":"Specify a collection name",
    "required":true
    },

    "conditions": {
      "type": "seq",
      "sequence": $(conditions)
    },

    "sort": {
      "type": "seq",
      "sequence": [{
        "title": "property",
        "type": "map",
        "mapping": {
          "property": {
            "type": "str",
            "required": true,
            "desc": "Property name"
          },
          "order": {
            "type": "str",
            "enum": ["ASC", "DESC"]
          }
        }
      }]
    },

    "select": {
      "type": "seq",
      "sequence": [{
        "title": "property",
        "type": "map",
        "mapping": {
            "property": {
                "type": "str",
                "required": true,
                "desc": "Property name"
            },
            "func": {
                "type": "str",
                "enum": ["COUNT", "SUM", "MAX"]
            }
         }
      }]
    },

    "groupby": {
      "type": "seq",
      "desc": "Select properties",
      "sequence": [{
        "type": "str",
        "title": "property"
      }]
    },

    "limit": {
      "type": "int",
      "desc": "Number of records for return"
    }

  }
}
