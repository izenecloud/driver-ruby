{
  "title":"Get Topic With Similar ones",
  "type":"map",
  "desc":"Get all topic list with similar ones of specific document",
  "mapping": {
    "collection": {
      "type":"str",
      "desc":"Specify a collection name",
      "required":true
    },

    "header": {
      "type":"map",
      "mapping": $(header)
    },

    "resource": {
      "type": "map",
      "desc": "Add exactly one DOCID",
      "required": true,
      "mapping": {
        "DOCID": {
          "type":"str",
          "desc":"Specify user specified DOCID of the target document."
        }
      }
    }

    
  }
}
