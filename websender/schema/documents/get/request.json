{
  "title":"Get Documents By ID",
  "type":"map",
  "desc":"Get documents from SF1",
  "mapping": {
    "collection": {
      "type":"str",
      "desc":"Specify a collection name",
      "required":true
    },

    "search_session": {
      "type":"map",
      "desc": "Trace last search. Can be used to hightlight and other features.",
      "mapping": $(search)
    },

    "conditions": {
      "type": "seq",
      "sequence": $(conditions)
    },

    "select": {
      "type": "seq",
      "sequence": $(select)
    }
  }
}
