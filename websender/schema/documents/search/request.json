{
  "title":"Search Documents",
  "type":"map",
  "desc":"Search documents from SF1",
  "mapping": {
    "collection": {
      "type":"str",
      "desc":"Specify a collection name",
      "required":true
    },

    "header": {
      "type":"map",
      "mapping": $(header)
    },

    "search": {
      "type":"map",
      "desc":"Parameters for full text search",
      "required":true,
      "mapping": $(search)
    },

    "group": {
      "type": "seq",
      "sequence": [{
        "title": "property",
        "type": "map",
        "mapping": {
          "property": {
            "type": "str",
            "required": true,
            "desc": "the property name"
          },
          "range": {
            "type": "bool",
            "desc": "whether return group results in range form"
          },
          "sub_property": {
            "type": "str",
            "desc": "to get 2nd level group results"
          },
          "unit": {
            "type": "str",
            "desc": "group unit for datetime property"
          }
        }
      }]
    },

    "attr": {
      "type": "map",
      "mapping": {
        "attr_result": {
          "type": "bool",
          "desc": "whether return group results by attribute values"
        },
        "attr_top": {
          "type": "int",
          "desc": "the number of group results to return"
        }
      }
    },

    "conditions": {
      "type": "seq",
      "sequence": $(conditions)
    },

    "range": {
      "type": "map",
      "mapping": {
        "property": {
          "type": "str",
          "desc": "property name for returning its value range"
        }
      }
    },

    "select": {
      "type": "seq",
      "sequence": $(select)
    },

    "custom_rank": {
      "type": "map",
      "mapping": {
        "params": {
          "type": "seq",
          "sequence": [{
            "type": "map",
            "mapping": {
              "name": { "required": true, "type": "str" },
              "type": { "required": true, "type": "str", "enum": ["CONSTANT", "PROPERTY"] },
              "value": { "required": true, "type": "str" }
            }
          }]
        },
        "expression": {
          "required": true,
          "type": "str",
          "desc": "Arithmetic expression for evaluating custom ranking score"
        }
      }
    },

    "sort": {
      "type": "seq",
      "sequence": [{
        "title": "property",
        "type": "map",
        "mapping": {
          "property": {
            "type": "str",
            "required": true,
            "desc": "Property name"
          },
          "order": {
            "type": "str",
            "enum": ["ASC", "DESC"]
          }
        }
      }]
    },

    "limit": {
      "type": "int",
      "desc": "Number of documents in page"
    },

    "offset": {
      "type": "int",
      "desc": "Offset of documents in current page"
    },

    "remove_duplicated_result": {
      "type": "bool"
    },

    "analyzer_result": {
      "desc": "Whether return analyzer result.",
      "type": "bool"
    },

    "mining_result": {
      "desc": "Whether return mining result.",
      "type": "bool"
    }
  }
}
