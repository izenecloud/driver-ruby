{
  "title":"Search Documents",
  "type":"map",
  "desc":"Search documents from SF1",
  "mapping": {
    "collection": {
      "type":"str",
      "desc":"Specify a collection name",
      "required":true
    },

    "header": {
      "type":"map",
      "mapping": $(header)
    },

    "search": {
      "type":"map",
      "desc":"Parameters for full text search",
      "required":true,
      "mapping": $(search)
    },

    "group": {
      "type": "seq",
      "sequence": [{
        "title": "property",
        "type": "map",
        "mapping": {
          "property": {
            "required": true,
            "type": "str"
          },
          "from": {
            "type": "any"
          },
          "to": {
            "type": "any"
          },
          "group_count": {
            "type": "int",
            "desc": "How many groups are splited between \"from\" and \"to\""
          }
        }
      }]
    },

    "conditions": {
      "type": "seq",
      "sequence": $(conditions)
    },

    "select": {
      "type": "seq",
      "sequence": $(select)
    },

    "sort": {
      "type": "seq",
      "sequence": [{
        "title": "proeprty",
        "type": "map",
        "mapping": {
          "property": {
            "type": "str",
            "required": true,
            "desc": "Property name"
          },
          "order": {
            "type": "str",
            "enum": ["ASC", "DESC"]
          }
        }
      }]
    },

    "limit": {
      "type": "int",
      "desc": "Number of documents in page"
    },

    "offset": {
      "type": "int",
      "desc": "Offset of documents in current page"
    },

    "remove_duplicated_result": {
      "type": "bool"
    },

    "analyzer_result": {
      "desc": "Whether return analyzer result.",
      "type": "bool"
    },

    "mining_result": {
      "desc": "Whether return mining result.",
      "type": "bool"
    }
  }
}
