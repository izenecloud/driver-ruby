{
  "keywords": {
    "type": "str",
    "required": true,
    "desc": "Search keywords"
  },
  "USERID": {
    "type": "str",
    "desc": "User ID"
  },
  "taxonomy_label": {
    "type": "str",
    "desc": "Only get documents with this label"
  },
  "name_entity_item": {
    "type": "str",
    "desc": "Only get documents from this name entity item. The type is specified in name_entity_type"
  },
  "name_entity_type": {
    "type": "str",
    "desc": "Only get documents from specified name entity item. Used with name_entity_item."
  },
  "group_label": {
    "desc": "Only get documents in the specified property groups",
    "type": "seq",
    "sequence": [{
      "title": "item",
      "type": "map",
      "mapping": {
        "property": {
          "type": "str",
          "required": true,
          "desc": "the property name"
        },
        "value": {
          "type": "seq",
          "required": true,
          "desc": "the label path",
          "sequence": [{
            "type": "str",
            "desc": "the node value"
          }]
        }
      }
    }]
  },
  "attr_label": {
    "desc": "Only get documents in the specified attribute groups",
    "type": "seq",
    "sequence": [{
      "title": "item",
      "type": "map",
      "mapping": {
        "attr_name": {
          "type": "str",
          "required": true,
          "desc": "the attribute name"
        },
        "attr_value": {
          "type": "str",
          "required": true,
          "desc": "the attribute value"
        }
      }
    }]
  },
  "in": {
    "desc": "Search in specified properties",
    "type": "seq",
    "sequence": [{
      "type": "str",
      "desc": "Property name"
    }]
  },
  "ranking_model": {
    "type": "str",
    "enum": ["plm", "kl", "bm25"]
  },
  "searching_mode": {
    "type": "str",
    "enum": ["and", "or", "verbose", "knn"]
  },
  "log_keywords": {
    "type": "bool"
  },
  "log_group_labels": {
    "type": "bool"
  },
  "analyzer": {
    "desc": "Analyzer Options",
    "type": "map",
    "mapping": {
      "use_synonym_extension": {
        "type": "bool"
      },
      "apply_la": {
        "type": "bool"
      },
      "use_original_keyword": {
        "type": "bool"
      }
    }
  }
}
