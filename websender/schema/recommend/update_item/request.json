{
  "title":"Update Item",
  "type":"map",
  "desc":"Update the attributes of an item.",
  "mapping": {
    "collection": {
      "type":"str",
      "desc":"Specify a collection name",
      "required":true
    },

    "header": {
      "type":"map",
      "mapping": $(header)
    },

    "resource": {
      "type":"map",
      "mapping": {
        "ITEMID": {
          "type": "str",
          "required": true,
          "desc": "the unique item id"
        },
        "name": {
          "type": "str",
          "desc": "the item name"
        },
        "link": {
          "type": "str",
          "desc": "the URL link of the item"
        },
        "category": {
          "type": "str",
          "desc": "the category of the item"
        }
      },
      "desc":"Specify the attributes of new item",
      "required":true
    }
  }
}
