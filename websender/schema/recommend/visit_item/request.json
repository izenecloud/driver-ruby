{
  "title":"Add Visit Item Event",
  "type":"map",
  "desc":"Add the user behavior of visiting item.",
  "mapping": {
    "collection": {
      "type":"str",
      "desc":"Specify a collection name",
      "required":true
    },

    "header": {
      "type":"map",
      "mapping": $(header)
    },

    "resource": {
      "type":"map",
      "mapping": {
        "session_id": {
          "type": "str",
          "required": true,
          "desc": "the session id"
        },
        "USERID": {
          "type": "str",
          "required": true,
          "desc": "the unique user id"
        },
        "ITEMID": {
          "type": "str",
          "required": true,
          "desc": "the unique item id"
        }
      },
      "desc":"Specify user id and item id",
      "required":true
    }
  }
}
