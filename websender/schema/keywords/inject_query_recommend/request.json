{
  "title":"Inject Query Recommend",
  "type":"map",
  "desc":"Inject Query Recommend.",
  "mapping": {
    "collection": {
      "type": "str",
      "desc": "On specified collection",
      "required": true
    },

    "header": {
      "type":"map",
      "mapping": $(header)
    },

    "resource": {
      "type": "seq",
      "desc": "all inject items",
      "sequence": [{
        "type": "map",
        "title": "the inject item, (query-result)",
        "mapping": {
	   "query" : {"type" : "str", "desc" : "query string" },
           "result" : {"type" : "str", "desc" : "results string, split by |" }

	}
      }]
    }
  }
}
